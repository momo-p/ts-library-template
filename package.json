{
  "name": "ts-library-template",
  "version": "0.0.1",
  "description": "A simple template for creating typescript library.",
  "repository": {
    "type": "git",
    "url": "git://github.com/momo-p/ts-library-template.git"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.js",
  "files": [
    "/dist/src"
  ],
  "scripts": {
    "test": "ts-mocha test/**/*.test.ts",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "pretty": "prettier \"./src/**/*.ts\" \"./test/**/*.ts\" --write",
    "lint": "eslint .",
    "prepare": "husky install"
  },
  "keywords": [
    "typescript",
    "template"
  ],
  "author": "momo-p <contact@relay.akimitsu.dev> (https://github.com/momo-p)",
  "license": "Unlicense",
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "src/**/*.{js,json,ts,xml,yaml}": [
      "pnpm lint",
      "prettier --write"
    ],
    "test/**/*.{js,json,ts,xml,yaml}": [
      "pnpm lint",
      "prettier --write"
    ]
  }
}
